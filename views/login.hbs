<div class="row my-4">
  <div class="col-md-5 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST" class="fs-4">
        <div class="mb-3">
          <label for="email" class="form-label">User Email：</label>
          <input type="text" class="form-control" name="email" id="email" placeholder="login with email">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">User Password：</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="your password">
        </div>
        <button type="submit" class="btn btn-primary col-12 mb-3">Login</button>
        <a href="/auth/facebook" class="btn btn-info col-12 mb-1">Facebook Login</a>
        <a href="/auth/google" class="btn btn-danger col-12 mb-1">Google Login</a>
      </form>
      <p class="mt-2">No Account? <a href="/users/register">Register</a></p>
    </div>
  </div>
</div>